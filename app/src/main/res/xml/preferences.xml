<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/pref_catergory_general"
        android:key="pref_key_general_settings">
        <EditTextPreference
            android:key="user_display_name"
            android:title="@string/pref_title_display_name"
            android:defaultValue="@string/pref_default_display_name"
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />
        <CheckBoxPreference
            android:key="disable_share_user_profile"
            android:title="@string/pref_share_user_profile"
            android:summary="@string/pref_share_user_profile_info"
            android:defaultValue="true" />
        <SwitchPreference
            android:key="theme_dark"
            android:title="@string/pref_theme_dark"
            android:summary="@string/pref_theme_dark_info"
            android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_catergory_notifications"
        android:key="pref_key_general_notifications">
        <CheckBoxPreference
            android:key="notifications_new_message"
            android:title="@string/pref_enable_notifications"
            android:summary="@string/pref_enable_notifications_info"
            android:defaultValue="true" />
    </PreferenceCategory>

</PreferenceScreen>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    style="@style/CardViewDark"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="none">

        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/group_title"
            android:textColor="@color/theme_primary"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/user_icon"
            android:layout_toEndOf="@+id/user_icon" />

        <be.ugent.vop.ui.widget.CircularImageView
            android:id="@+id/user_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile_default"
            app:border="false"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/group_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:text="@string/group_info"
            android:gravity="center|start"
            android:textSize="13sp"
            android:layout_below="@+id/card_title"
            android:layout_toRightOf="@+id/user_icon"
            android:layout_toEndOf="@+id/user_icon" />

        <TextView
            android:id="@+id/update_info"
            android:layout_width="fill_parent"
            android:layout_height="26dip"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@string/group_info"
            android:textSize="13sp"
            android:layout_below="@+id/group_name"
            android:layout_alignLeft="@+id/group_name"
            android:layout_alignStart="@+id/group_name" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
            <CheckBox android:id="@+id/checkboxTypeFriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friends"
                android:buttonTint="@color/theme_primary_dark"/>
            <CheckBox android:id="@+id/checkboxTypeClub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Club"
                android:buttonTint="@color/theme_primary_dark"/>
            <CheckBox android:id="@+id/checkboxTypeStudentGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Studentgroup"
                android:buttonTint="@color/theme_primary_dark"/>
    </LinearLayout>
    </LinearLayout>


            <TextView
                android:paddingTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check this box if the event is verified:"
                android:id="@+id/textView6"
                >


            </TextView>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verified"
                android:id="@+id/checkBoxVerified"
                android:checked="false"
                android:buttonTint="@color/theme_accent_1" />


            <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Event"
        android:id="@+id/buttonCreateEvent"
        android:layout_gravity="center_horizontal"/>




        </LinearLayout>
        </ScrollView>
</LinearLayout>


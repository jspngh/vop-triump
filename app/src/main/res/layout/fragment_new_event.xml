            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/checkboxSizeContainer"
        android:layout_weight="0.5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select applicable group sizes:"
            android:id="@+id/textView2" />

       <!-- <CheckBox android:id="@+id/checkboxSizeAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:buttonTint="@color/theme_primary_dark"
            android:layout_margin="0dp" />-->
        <CheckBox android:id="@+id/checkboxSizeIndividual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Individual"
            android:buttonTint="@color/theme_primary_dark"
            />
        <CheckBox android:id="@+id/checkboxSizeSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small"
            android:buttonTint="@color/theme_primary_dark"/>
        <CheckBox android:id="@+id/checkboxSizeMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:buttonTint="@color/theme_primary_dark"/>
        <CheckBox android:id="@+id/checkboxSizeLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large"
            android:buttonTint="@color/theme_primary_dark"/>
</LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/checkboxTypeContainer"
            android:layout_weight="0.5" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select applicable group types:"
                android:id="@+id/textView3"
                />

       <!--     <CheckBox android:id="@+id/checkboxTypeAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">



    <ImageView
        android:layout_width="match_parent"
        android:layout_weight="0.33"
        android:id="@+id/imageView"
        android:contentDescription="image of the venue"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        android:layout_height="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textViewVenueName"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerGroupType"
        android:spinnerMode="dropdown" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerGroupSize"
        android:spinnerMode="dropdown" />
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fragment_venue_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_weight="0.54">
    <ListView
        android:layout_height="wrap_content"
        android:layout_weight="0.66"
        android:layout_width="match_parent"
        android:id="@+id/listViewRanking"
        android:layout_margin="0dp"
        android:elevation="8dp"
        android:visibility="invisible" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="73dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="checkin"
            android:id="@+id/buttonCheckin"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="43dp"
            android:layout_marginStart="43dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make new Event"
            android:id="@+id/buttonNewEvent"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>
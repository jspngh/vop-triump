<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    style="@style/CardViewDark"
    card_view:cardCornerRadius="2dp" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider"
        android:showDividers="middle">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reward_title"
                android:textColor="@color/theme_primary"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/reward_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/venue_name" />
            <TextView
                android:id="@+id/reward_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/reward_info" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">

            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/button_claim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/theme_primary"
                android:padding="8dp"
                android:text="@string/reward_claim" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="2dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:showDividers="none">

        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/venue_title"
            android:textColor="@color/theme_primary"
            android:textSize="25sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight">

            <be.ugent.vop.ui.widget.CircularImageView
                android:id="@+id/icon1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/profile_default"
                app:border="false"/>

            <TextView
                android:id="@+id/venue_1_info"
                android:layout_width="fill_parent"
                android:layout_height="26dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/icon1"
                android:layout_toEndOf="@id/icon1"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:layout_marginBottom="8dp"
                android:text="@string/venue_info"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/venue_1_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/venue_1_info"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_toRightOf="@id/icon1"
                android:layout_toEndOf="@id/icon1"
                android:layout_marginTop="8dp"
                android:text="@string/venue_name"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight">

            <be.ugent.vop.ui.widget.CircularImageView
                android:id="@+id/icon2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/profile_default"
                app:border="false"/>

            <TextView
                android:id="@+id/venue_2_info"
                android:layout_width="fill_parent"
                android:layout_height="26dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/icon2"
                android:layout_toEndOf="@id/icon2"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:layout_marginBottom="8dp"
                android:text="@string/venue_info"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/venue_2_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/venue_2_info"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_toRightOf="@id/icon2"
                android:layout_toEndOf="@id/icon2"
                android:layout_marginTop="8dp"
                android:text="@string/venue_name"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight">

            <be.ugent.vop.ui.widget.CircularImageView
                android:id="@+id/icon3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/profile_default"
                app:border="false"/>

            <TextView
                android:id="@+id/venue_3_info"
                android:layout_width="fill_parent"
                android:layout_height="26dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/icon3"
                android:layout_toEndOf="@id/icon3"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:layout_marginBottom="8dp"
                android:text="@string/venue_info"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/venue_3_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/venue_3_info"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_toRightOf="@id/icon3"
                android:layout_toEndOf="@id/icon3"
                android:layout_marginTop="8dp"
                android:text="@string/venue_name"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
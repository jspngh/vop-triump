<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <be.ugent.vop.ui.widget.CircularImageView
        android:id="@+id/profilePic"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:contentDescription="TODO"
        android:src="@drawable/profile_default"
        app:border="false"
        android:layout_alignTop="@+id/btnAccept"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/user_name"
        android:minWidth="100dp"
        android:layout_width="wrap_content"
        android:layout_height="26dip"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Username"
        android:textSize="22sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/profilePic"
        android:layout_toEndOf="@+id/profilePic"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp" />
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnDecline"
        android:background="@drawable/decline_user_button"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btnAccept"
        android:background="@drawable/accept_user_button"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btnDecline"
        android:layout_toStartOf="@+id/btnDecline"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"/>
</RelativeLayout>